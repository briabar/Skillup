            if ( node.belongsTo !== pastBelongsTo ) {
                pastBelongsTo = node.belongsTo;
                %>
                <div class="branch-spacer"></div>
                <%
            }

            if (pastLevel < node.level || node.level === 0) {
                %>
                </div>
                <br>
                <div class="level-container" id="level-<%= node.level %>">
                <%
                pastLevel = node.level;
            }
    %> 
